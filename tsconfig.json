{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "jsxFactory": "h",
        "typeRoots": ["src/types", "./node_modules/@types"]
    },
    "include": [
        "./src/ts/**/*"
    ],
    "baseUrl": "src/ts",
    "paths": {
        "~": ["/*"],
    }
}
